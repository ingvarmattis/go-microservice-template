#Common
AUTH_SERVICE_NAME=auth
AUTH_DEBUG=false

#Server ports
AUTH_GRPC_SERVER_LISTEN_PORT=8000
AUTH_HTTP_SERVER_LISTEN_PORT=8001
AUTH_HTTP_METRICS_SERVER_LISTEN_PORT=8002

#PostgresConfig
AUTH_POSTGRES_URL=postgres://postgres:postgres@localhost:5432/postgres?sslmode=disable&pool_max_conns=10&pool_min_conns=0&pool_max_conn_lifetime=1h&pool_max_conn_idle_time=30m

#Tracing
AUTH_OPENTELEMETRY_COLLECTOR_URL=opentelemetry-collector.observability.svc:4317
AUTH_OPENTELEMETRY_USE_TLS=true

#Authorization
AUTH_AUTH_TOKEN=token

#Crypto
AUTH_CRYPTO_KEY=key
